</head>

<body>

    <div class="page-wrapper">

        <!-- Preloader -->
        <div class="preloader"></div>

        <!-- Main Header-->

                <!-- Header -->
                <%- include('Header.ejs') %>
                <!-- Header -->

        <!-- Start main-content -->
        <section class="page-title" style="background-image: url(images/background/page-title.jpg);">
            <div class="auto-container">
                <div class="title-outer">
                    <h1 class="title">News Grid</h1>
                    <ul class="page-breadcrumb">
                        <li><a href="index-2.html">Home</a></li>
                        <li>News</li>
                    </ul>
                </div>
            </div>
        </section>
        <!-- end main-content -->

        <!-- News Section -->
        <section class="">
            <div class="container pb-90">
                <div class="row">
                    <!-- Loop through the response array from the newsData -->
                    <% for (const newsItem of newsData) { %>
                        <div class="news-block col-lg-4 col-md-6 col-sm-12">
                            <div class="inner-box">
                                <div class="image-box">
                                    <figure class="image"><a href="/news-details/<%= newsItem._id %>"><img
                                                src="<%= `https://event-manager.syd1.cdn.digitaloceanspaces.com/${newsItem.image}` %>"
                                                alt=""></a></figure>
                                    <span class="date"><b>
                                            <%= new Date(newsItem.date).getDate() %>
                                        </b>
                                        <%= new Date(newsItem.date).toLocaleString('default', { month: 'short'
                                            }).toUpperCase() %>
                                    </span>
                                </div>
                                <div class="content-box">
                                    <ul class="post-info">
                                        <h4 class="title"><a href="/news-details/<%= newsItem._id %>">
                                                <%= newsItem.title %>
                                            </a></h4>
                                    </ul>
                                </div>
                                <div class="bottom-box">
                                    <a href="/news-details/<%= newsItem._id %>" class="read-more">Read More <i
                                            class="fa fa-long-arrow-alt-right"></i></a>
                                    <div class="comments"><i class="fa fa-comments"></i> 02</div>
                                </div>
                            </div>
                        </div>
                        <% } %>

                </div>


            </div>
        </section>
        <!--End News Section -->

            <!-- Footer -->
            <%- include('Footer.ejs') %>
            <!-- Footer -->

    </div><!-- End Page Wrapper -->


    <!-- Scroll To Top -->
    <div class="scroll-to-top scroll-to-target" data-target="html"><span class="fa fa-angle-up"></span></div>


    <script src="js/jquery.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/jquery.fancybox.js"></script>
    <script src="js/jquery-ui.js"></script>
    <script src="js/wow.js"></script>
    <script src="js/appear.js"></script>
    <script src="js/select2.min.js"></script>
    <script src="js/swiper.min.js"></script>
    <script src="js/owl.js"></script>
    <script src="js/script.js"></script>
</body>

