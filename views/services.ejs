<!DOCTYPE html>
<html lang="en">


    <!-- Header -->
    <%- include('Header.ejs') %>
    <!-- Header -->

    <!-- Start main-content -->
    <section class="page-title" style="background-image: url(../images/background/page-title.jpg);">
      <div class="auto-container">
        <div class="title-outer">
          <h1 class="title">Services</h1>
          <ul class="page-breadcrumb">
            <li><a href="/">Home</a></li>
            <li>Services</li>
          </ul>
        </div>
      </div>
    </section>
    <!-- end main-content -->

    <!-- Services Section -->
    <section class="">
      <div class="container">

        <div class="row">
          <!-- Service Block -->
          <% for (const service of serviceData) { %>
          <div class="service-block col-lg-4 col-md-6 col-sm-12">
            <div class="inner-box">
              <div class="image-box">
                <figure class="image"><a href="#"><img src="<%= `https://event-manager.syd1.cdn.digitaloceanspaces.com/${service.image }` %>" alt="<%= service.title %>"></a></figure>
                <div class="icon-box">
                  
                  <img src="../images/m_icon.png">
                </div>
              </div>
              <div class="content-box">
                <h5 class="title"><a href="/service-details/<%= service._id %>">
                    <%= service.title %>
                  </a></h5>
                <div class="text">
                  <%= service.description.substring(0, 130) %>...
                </div>
                <a href="/service-details/<%= service._id %>" class="read-more">read More </a>
              </div>
            </div>
          </div>
          <% } %>


        </div>
      </div>
    </section>
    <!-- End Services Section-->

    <!-- Footer -->
    <%- include('Footer.ejs') %>
    <!-- Footer -->
</body>
</html>